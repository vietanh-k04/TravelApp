<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient nhẹ kiểu hiện đại -->
    <gradient
        android:startColor="#FFFFFFFF"
        android:endColor="#FFF7F7F7"
        android:angle="90" />

    <!-- Bo góc lớn đẹp hơn -->
    <corners android:radius="20dp" />

    <!-- Viền mờ nhẹ tạo cảm giác nổi -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- Padding -->
    <padding
        android:left="14dp"
        android:right="14dp"
        android:top="10dp"
        android:bottom="10dp" />

</shape>
