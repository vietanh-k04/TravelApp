<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_hint_quick"
        android:textStyle="bold"
        android:textSize="@dimen/_24ssp"
        android:padding="@dimen/_16sdp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupQuickExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            app:singleLine="true"
            app:chipSpacing="@dimen/_12sdp"
            tools:ignore="VisualLintBounds">

            <com.google.android.material.chip.Chip
                style="@style/QuickChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hint_chip_HN" />

            <com.google.android.material.chip.Chip
                style="@style/QuickChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hint_chip_DN" />

            <com.google.android.material.chip.Chip
                style="@style/QuickChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hint_chip_H" />

            <com.google.android.material.chip.Chip
                style="@style/QuickChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hint_chip_NB" />

            <com.google.android.material.chip.Chip
                style="@style/QuickChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hint_chip_PQ" />

            <com.google.android.material.chip.Chip
                style="@style/QuickChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hint_chip_HCM" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</LinearLayout>
